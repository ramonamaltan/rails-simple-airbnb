<div class="container">
  <div class="d-flex justify-content-center m-5">
    <h1><%= @flat.name %></h1>
  </div>
  <div class="d-flex justify-content-center m-5 p-3 bg-secondary text-light">
    <p><%= @flat.description %></p>
  </div>
  <div>
    <h1>Details</h1>
    <p><%= "🧍‍♀️ #{@flat.number_of_guests}" %> <%= "#{@flat.price_per_night}€" %></p>
  </div>
  <div class="d-flex justify-content-center m-5">
    <%= link_to 'All flats', flats_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>
